# Kaia Network Configuration
NODE_ENV=development

# Wallet Configuration
PRIVATE_KEY=your_private_key_here
MNEMONIC=your_mnemonic_phrase_here

# Kaia RPC URLs
KAIA_MAINNET_RPC=https://public-en.node.kaia.io
KAIA_TESTNET_RPC=https://public-en-kairos.node.kaia.io

# Contract Addresses (Updated after deployment)
KAIA_SIP_MANAGER=0x0000000000000000000000000000000000000000
KAIA_SIP_TOKEN=0x0000000000000000000000000000000000000000
KAIA_USDT_VAULT=0x0000000000000000000000000000000000000000
KAIA_USDC_VAULT=0x0000000000000000000000000000000000000000
KAIA_DAI_VAULT=0x0000000000000000000000000000000000000000
KAIA_CROSS_CHAIN_BRIDGE=0x0000000000000000000000000000000000000000

# Kaia Native Stablecoins
KAIA_USDT_ADDRESS=0x0000000000000000000000000000000000000001
KAIA_USDC_ADDRESS=0x0000000000000000000000000000000000000002
KAIA_DAI_ADDRESS=0x0000000000000000000000000000000000000003

# Cross-Chain Bridge Protocols
AXELAR_GATEWAY=0x0000000000000000000000000000000000000004
LAYERZERO_ENDPOINT=0x0000000000000000000000000000000000000005

# API Keys
KAIASCAN_API_KEY=your_kaiascan_api_key
OPENAI_API_KEY=your_openai_api_key
WEB3AUTH_CLIENT_ID=your_web3auth_client_id

# AI Agent Configuration
AI_AGENT_PRIVATE_KEY=your_ai_agent_private_key
AI_RISK_ASSESSMENT_ENABLED=true
AI_YIELD_OPTIMIZATION_ENABLED=true

# Chainlink Automation (if available on Kaia)
CHAINLINK_AUTOMATION_REGISTRY=0x0000000000000000000000000000000000000006
CHAINLINK_LINK_TOKEN=0x0000000000000000000000000000000000000007

# Gas Configuration
DEFAULT_GAS_PRICE=25000000000
DEFAULT_GAS_LIMIT=300000

# Frontend Configuration
REACT_APP_NETWORK=kaia-testnet
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Development Settings
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_MOCK_DATA=true

# Production Settings (for mainnet)
# NODE_ENV=production
# REACT_APP_NETWORK=kaia-mainnet
# DEBUG=false
# ENABLE_MOCK_DATA=false